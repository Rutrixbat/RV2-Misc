  <HediffDef>
    <defName>RV2R_EndoRecovery</defName>
    <hediffClass>HediffWithComps</hediffClass>
    <label>endo sickness</label>
    <description>Generalized weakness and disorientation caused by predatory entrapment. It's generaly not dangerous, and most report feeling relaxed and comfortable, if woozy. Victims recover with rest and time.</description>
    <initialSeverity>0.01</initialSeverity>
    <maxSeverity>1.00</maxSeverity>
    <isBad>false</isBad>
    <tendable>false</tendable>
    <priceImpact>false</priceImpact>
    <comps>
      <li Class="HediffCompProperties_SeverityPerDay">
        <severityPerDay>-0.35</severityPerDay>
      </li>
    </comps>
    <stages>
      <li>
        <label>trivial</label>
        <restFallFactor>1.1</restFallFactor>
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <offset>-0.05</offset>
          </li>
          <li>
            <capacity>Manipulation</capacity>
            <offset>-0.05</offset>
          </li>
        </capMods>
      </li>
      <li>
        <minSeverity>0.25</minSeverity>
        <label>minor</label>
        <restFallFactor>1.2</restFallFactor>
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <offset>-0.1</offset>
          </li>
          <li>
            <capacity>Manipulation</capacity>
            <offset>-0.125</offset>
          </li>
        </capMods>
      </li>
      <li>
        <minSeverity>0.5</minSeverity>
        <label>heavy</label>
        <painFactor>0.90</painFactor>
        <restFallFactor>1.3</restFallFactor>
        <hungerRateFactor>0.90</hungerRateFactor>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <setMax>0.95</setMax>
          </li>
          <li>
            <capacity>Moving</capacity>
            <offset>-0.15</offset>
          </li>
          <li>
            <capacity>Manipulation</capacity>
            <offset>-0.20</offset>
          </li>
        </capMods>
      </li>
      <li>
        <minSeverity>0.75</minSeverity>
        <label>heavy</label>
        <painFactor>0.80</painFactor>
        <restFallFactor>1.4</restFallFactor>
        <hungerRateFactor>0.8</hungerRateFactor>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <setMax>0.85</setMax>
          </li>
          <li>
            <capacity>Sight</capacity>
            <offset>-0.05</offset>
          </li>
          <li>
            <capacity>Moving</capacity>
            <offset>-0.2</offset>
          </li>
          <li>
            <capacity>Manipulation</capacity>
            <offset>-0.25</offset>
          </li>
        </capMods>
      </li>
      <li>
        <minSeverity>0.90</minSeverity>
        <label>severe</label>
        <painFactor>0.70</painFactor>
        <restFallFactor>1.5</restFallFactor>
        <hungerRateFactor>0.65</hungerRateFactor>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <setMax>0.75</setMax>
          </li>
          <li>
            <capacity>Sight</capacity>
            <offset>-0.15</offset>
          </li>
          <li>
            <capacity>Moving</capacity>
            <offset>-0.25</offset>
          </li>
          <li>
            <capacity>Manipulation</capacity>
            <offset>-0.30</offset>
          </li>
        </capMods>
      </li>
      <li>
        <minSeverity>0.95</minSeverity>
        <label>severe</label>
        <painFactor>0.60</painFactor>
        <restFallFactor>1.75</restFallFactor>
        <hungerRateFactor>0.55</hungerRateFactor>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <setMax>0.70</setMax>
          </li>
          <li>
            <capacity>Sight</capacity>
            <offset>-0.25</offset>
          </li>
          <li>
            <capacity>Moving</capacity>
            <offset>-0.25</offset>
          </li>
          <li>
            <capacity>Manipulation</capacity>
            <offset>-0.35</offset>
          </li>
        </capMods>
      </li>
    </stages>
  </HediffDef>
  
